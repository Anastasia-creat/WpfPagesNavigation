                FontSize="15"

                  Background="White"
                    Content="Мама"></Button>

        <Image Grid.Column="0" Grid.Row="5"
               Margin="10"
               Source="/Images/5.png"></Image>

        <Button Grid.Column="1" Grid.Row="5"
